<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="privateapp.statobr.com.privateapp">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="Private STATO"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true">
        <activity
            android:name=".login.Login"
            android:label="Indica STATO"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".login.Registrar"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Menus"
            android:theme="@style/AppTheme.NoActionBar">
            <category android:name="android.intent.category.LAUNCHER" />
        </activity>
        <activity
            android:name=".ex.Premios"
            android:label="@string/title_activity_premios"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ex.Indicar"
            android:label="@string/title_activity_indicar"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ex.StatusIndicacoes"
            android:label="@string/title_activity_status_indicacoes"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ex.FaleConosc"
            android:label="@string/title_activity_fale_conosc"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>